@{
    ViewData["Title"] = "Books";
}

@model List<BookViewModel>

<div class="text-center">
    <h1 class="display-4">Books</h1>

    <table class="table mt-4">
        <thead> 
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year Published</th> 
            </tr>
        </thead>
        <tbody>
            @{
                foreach (BookViewModel book in Model)
                {
                    <tr>
                        <th>@book.Title</th>
                        <th>@book.Author</th>
                        <th>@book.PublishedYearDisplay</th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
